<Window x:Name="ChangeTuningWindow" x:Class="PFE.MenuDialogs.ChangeTuningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PFE.MenuDialogs"
        mc:Ignorable="d"
        Title="Change Tuning" Height="412.605" Width="269.747" ResizeMode="NoResize">
    <Grid>
        <GroupBox x:Name="gb_FateOfNotes" Header="Fate of notes" Margin="10,10,10,0" Height="54" VerticalAlignment="Top">
            <StackPanel>
                <RadioButton x:Name="radio_DoNothing" GroupName="group1" Content="Keep them" IsChecked="True"/>
                <RadioButton x:Name="radio_Scale" GroupName="group1"  Content="Convert them"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Margin="10,69,10,44" Width="244">
            <Label Content="Strings:" />
            <StackPanel x:Name="stringsPanel" Height="245" />
        </StackPanel>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="60" Click="btn_ok_Click"/>
    </Grid>
</Window>
